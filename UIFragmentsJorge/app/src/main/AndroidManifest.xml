<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uc3m.foodstuff">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UIFragmentsJorge">
        <activity
            android:name="com.uc3m.foodstuff.ui.newrecipe.NewRecipeActivity"
            android:label="@string/title_activity_new_recipe"
            android:theme="@style/Theme.UIFragmentsJorge.NoActionBar" />
        <activity
            android:name="com.uc3m.foodstuff.ui.showrecipe.ShowRecipeActivity"
            android:label="Recipe details"
            android:theme="@style/Theme.UIFragmentsJorge.NoActionBar" />
        <activity
            android:name="com.uc3m.foodstuff.ui.webrecipe.WebRecipeActivity"
            android:label="Recipe result"
            android:theme="@style/Theme.UIFragmentsJorge.NoActionBar" />
        <activity
            android:name="com.uc3m.foodstuff.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.uc3m.foodstuff.login.LoginActivity"
            android:label="Food Stuff">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>